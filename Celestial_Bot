const express = require('express');  
const app = express();  
app.get('/', (req, res) => res.send('Bot running'));  

const TelegramBot = require('node-telegram-bot-api');  
const Token = 8401742093:AAGsLfsHUBdwWoolEEZu2QCOM1Qe01VF9gk
const bot = new TelegramBot(token, { polling: true });  

bot.onText(/\/start/, (msg) => {  
  bot.sendMessage(msg.chat.id, `ðŸš€ Welcome to Celestial Deposits. 0x612aB0d44E258170D0888779207eF68318D4caC9 Balance: 1M Chima locked. Type /rank for stats.`);  
});  

bot.on('message', (msg) => {  
  if (msg.text.includes('/rank')) {  
    bot.sendMessage(msg.chat.id, `Celestial Token: 1000000 CELT locked.\nChima: 50000\nRank: Captain - 3 kids fed.`);  
  }  
});  

app.listen(process.env.PORT || 3000, () => console.log('Bot server up'));  
